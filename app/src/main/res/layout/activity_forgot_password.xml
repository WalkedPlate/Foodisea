<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context=".activity.login.ForgotPasswordActivity">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <Button
            android:id="@+id/btnBack"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/btnBack"
            app:icon="@drawable/baseline_arrow_back_ios_new_24"
            android:backgroundTint="@color/bg_gray_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olvidé contraseña"
            android:textSize="18sp"
            android:fontFamily="@font/sen_font"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Correo -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etCorreoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo electrónico"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_email"
        app:boxStrokeColor="@color/border_light"
        app:hintTextColor="@color/border_light"
        app:cursorColor="@color/border_light">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:maxLength="50" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Botón de envío correo -->
    <Button
        android:id="@+id/btnSentEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar correo"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:layout_marginHorizontal="32dp"
        android:textStyle="bold"/>


</LinearLayout>