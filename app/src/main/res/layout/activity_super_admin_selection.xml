<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".activity.superadmin.SuperAdminSelectionActivity">


    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Botón de regresar (flecha) -->
        <Button
            android:id="@+id/btnBack"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/btnBack"
            app:icon="@drawable/baseline_arrow_back_ios_new_24"
            app:iconTint="@color/black"
            android:backgroundTint="@color/bg_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestión administrativa"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/sen_font"
            android:padding="8dp"/>

    </LinearLayout>

    <!-- Opciones adminitrativas -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_marginTop="40dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="10dp"
                app:strokeColor="@color/gray_medium"
                app:strokeWidth="1dp"
                android:clickable="true"
                android:focusable="true"
                android:backgroundTint="@color/btn_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <!-- Texto del botón -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Restaurantes"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <!-- Imagen debajo del texto -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/icon_restaurant"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:strokeColor="@color/gray_medium"
                app:strokeWidth="1dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                android:backgroundTint="@color/btn_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <!-- Texto del botón -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Administradores"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <!-- Imagen debajo del texto -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/icon_admin"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="4dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:strokeWidth="1dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                android:backgroundTint="@color/btn_light"
                app:strokeColor="@color/gray_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <!-- Texto del botón -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Repartidores"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <!-- Imagen debajo del texto -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_repartidor"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnClientes"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:strokeWidth="1dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                android:backgroundTint="@color/btn_light"
                app:strokeColor="@color/gray_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <!-- Texto del botón -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clientes"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <!-- Imagen debajo del texto -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/icon_cliente"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </TableRow>

    </TableLayout>


</LinearLayout>