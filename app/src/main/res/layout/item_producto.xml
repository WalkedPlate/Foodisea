<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="12dp"
    android:background="@drawable/border_bottom"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground">

        <!-- Imagen del producto -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:contentDescription="@string/imgProduct"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.RoundedCorners16dp"
            android:padding="8dp"
            android:scaleType="centerCrop" />

        <!-- Nombre del producto -->
        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nameProduct"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/sen_font"
            android:layout_margin="4dp"
            android:ellipsize="end"
            android:maxLines="1"/>

        <!-- Precio del producto -->
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/priceProduct"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="4dp"
            android:textColor="@color/btn_dark" />

        <!-- Indicador de "Agotado" (opcional) -->
<!--        <TextView-->
<!--            android:id="@+id/productStatus"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="center"-->
<!--            android:textColor="@android:color/holo_red_dark"-->
<!--            android:visibility="gone" />-->
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

