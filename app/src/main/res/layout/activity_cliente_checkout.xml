<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.cliente.ClienteCheckoutActivity"
    android:background="@color/bg_color">

    <!-- Contenido Scrolleable -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/containerBottom"
        android:clipToPadding="false"
        android:paddingBottom="16dp"> <!-- Evitar que lo tape el contenedor inferior -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <Button
                    android:id="@+id/btnBack"
                    style="?attr/materialIconButtonFilledTonalStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/baseline_arrow_back_ios_new_24"
                    android:contentDescription="@string/btnBack"
                    android:backgroundTint="@color/bg_color"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resumen del pedido"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:fontFamily="@font/sen_font" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Resto del contenido -->
            <!-- Contenido del resumen -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <!-- Detalle dirección destino -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- Título de dirección -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dirección destino:"
                        android:fontFamily="@font/sen_font"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <!-- Botón Editar dirección -->
                    <TextView
                        android:id="@+id/btnEditAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EDITAR"
                        android:textSize="14sp"
                        android:fontFamily="@font/sen_font"
                        android:textColor="@android:color/holo_blue_light"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_box"
                    android:padding="12dp"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location"
                        app:tint="@color/gray"/>

                    <!-- Dirección destino actual -->
                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2118 Thornridge Cir. Syracuse"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="8dp"
                        android:textSize="15sp" />

                </LinearLayout>

                <!-- Detalle de la orden -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- Orden -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Detalle de la orden:"
                        android:textSize="14sp"
                        android:fontFamily="@font/sen_font"
                        android:textStyle="bold"
                        android:layout_weight="1" />

                    <!-- Botón Editar pedido -->
                    <TextView
                        android:id="@+id/btnEditOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EDITAR"
                        android:textSize="14sp"
                        android:fontFamily="@font/sen_font"
                        android:textColor="@android:color/holo_blue_light"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/rounded_box"
                    android:paddingBottom="16dp">

                    <!-- RecyclerView para Detalles del pedido -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/orderItemsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <!-- Detalle de cuenta -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalle de cuenta:"
                    android:fontFamily="@font/sen_font"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/rounded_box">

                    <!-- Total consumo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total consumo:"
                            android:textSize="14sp"
                            android:fontFamily="@font/sen_font"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvTotalConsumo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/. 281.20"
                            android:textSize="14sp"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <!-- Delivery -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery:"
                            android:textSize="14sp"
                            android:fontFamily="@font/sen_font"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvDelivery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/. 15.00"
                            android:textSize="14sp"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Contenedor fijo en la parte inferior -->
    <LinearLayout
        android:id="@+id/containerBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_top"
        android:backgroundTint="#E8EAF6">

        <!-- Total consumo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:layout_marginVertical="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTotalLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="PAGO TOTAL:"
                android:textSize="16sp"
                android:fontFamily="@font/sen_font"
                android:textColor="@android:color/black"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/. 296.20"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Botón "Aceptar" -->
        <Button
            android:id="@+id/btnAccept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACEPTAR"
            android:textSize="16sp"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white"
            android:fontFamily="@font/sen_font"
            android:layout_margin="8dp"
            android:padding="14dp"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>
