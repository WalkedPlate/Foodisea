<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.cliente.ClienteCheckoutActivity"
    android:background="@color/bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <Button
                android:id="@+id/btnBack"
                style="?attr/materialIconButtonFilledTonalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/baseline_arrow_back_ios_new_24"
                android:contentDescription="@string/btnBack"
                android:backgroundTint="@color/bg_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resumen del pedido"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:fontFamily="@font/sen_font"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Dirección de destino -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_box">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Encabezado de dirección -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <!-- Título de dirección -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="DIRECCION DESTINO"
                            android:textColor="@android:color/darker_gray"
                            android:fontFamily="@font/sen_font"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Botón Editar dirección -->
                        <TextView
                            android:id="@+id/btnEditAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EDITAR"
                            android:textColor="@android:color/holo_blue_light"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Dirección destino actual -->
                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/search_view_bg"
                        android:padding="12dp"
                        android:text="2118 Thornridge Cir. Syracuse"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>



            <!-- Detalles del pedido -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_box">

                <!--  Encabezado del pedido -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:gravity="center_vertical">

                        <!-- Título del restaurante -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BURGER BISTRO"
                            android:textSize="16sp"
                            android:fontFamily="@font/sen_font"
                            android:textStyle="bold"
                            android:textColor="@android:color/darker_gray"
                            android:layout_weight="1" />

                        <!-- Botón Editar pedido -->
                        <TextView
                            android:id="@+id/btnEditOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EDITAR"
                            android:textColor="@android:color/holo_blue_light"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <!-- Productos del pedido -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <!-- RecyclerView para Detalles del pedido -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/orderItemsRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <!-- Resumen de costos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/rounded_box">

                <!-- Total consumo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total consumo:"
                        android:textSize="16sp"
                        android:fontFamily="@font/sen_font"
                        android:textColor="@android:color/darker_gray"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvTotalConsumo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 281.20"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <!-- Delivery -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery:"
                        android:textSize="16sp"
                        android:fontFamily="@font/sen_font"
                        android:textColor="@android:color/darker_gray"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvDelivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 15.00"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




    <!-- Contenedor del precio y "Realizar pedido", ubicado en la parte inferior -->
    <LinearLayout
        android:id="@+id/containerBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_top">

        <!-- Total consumo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:elevation="4dp"
            android:gravity="center_vertical">

            <!-- Precio -->
            <TextView
                android:id="@+id/tvTotalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAGO TOTAL:"
                android:textSize="18sp"
                android:fontFamily="@font/sen_font"
                android:textColor="@android:color/black"
                android:layout_weight="1"/>

            <!-- Precio Total -->
            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/. 296.20"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Botón "Aceptar" -->
        <Button
            android:id="@+id/btnAccept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACEPTAR"
            android:textSize="18sp"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>