<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.cliente.ClienteSeleccionDireccionActivity"
    android:background="@color/bg_color">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_color"
        android:elevation="4dp">

        <!-- Toolbar con botón de regreso y título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <!-- Botón de regresar (flecha) -->
            <Button
                android:id="@+id/btnBack"
                style="?attr/materialIconButtonFilledTonalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/baseline_arrow_back_ios_new_24"
                android:contentDescription="@string/btnBack"
                app:iconTint="@color/black"
                android:backgroundTint="@color/bg_color"/>

            <!-- Texto "Seleccionar ubicación" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar ubicación"
                android:textSize="20sp"
                android:fontFamily="@font/sen_font"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Barra de búsqueda con estilo personalizado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_view_bg"
                android:queryHint="Buscar dirección"
                android:iconifiedByDefault="false"
                android:searchIcon="@drawable/round_search_24"
                android:queryBackground="@android:color/transparent"
                android:theme="@style/SearchViewStyle"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Mapa -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/bottomPanel"/>

    <!-- Panel inferior con efecto de elevación y esquinas redondeadas -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@drawable/rounded_top"
        android:padding="16dp">

        <!-- Contenedor de la dirección -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/rounded_box"
            android:layout_marginBottom="16dp">

            <!-- Título "DIRECCIÓN SELECCIONADA" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DIRECCIÓN SELECCIONADA"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/sen_font"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Dirección seleccionada -->
            <TextView
                android:id="@+id/tvDireccionSeleccionada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:minHeight="48dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <!-- Botón de confirmar -->
        <Button
            android:id="@+id/btnConfirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONFIRMAR UBICACIÓN"
            android:textSize="18sp"
            android:backgroundTint="@color/btn_medium"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>


</RelativeLayout>