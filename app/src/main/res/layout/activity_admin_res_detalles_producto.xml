<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context=".activity.adminRes.AdminResDetallesProductoActivity">

    <!-- Header con botón de regresar y título -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <!-- Botón de regresar (flecha) -->
        <Button
            style="?attr/materialIconButtonFilledTonalStyle"
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/baseline_arrow_back_ios_new_24"
            android:contentDescription="@string/btnBack"
            android:backgroundTint="@color/bg_color"/>


        <TextView
            android:id="@+id/nombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del producto"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:fontFamily="@font/sen_font">
        </TextView>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Contenedor del carrusel -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- ViewPager para el carrusel de imágenes -->
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPagerImages"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"/>

                    <!-- Overlay gradiente en la parte inferior -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_alignBottom="@id/viewPagerImages"
                        android:background="@drawable/gradient_overlay"/>

                    <!-- Indicadores de página -->
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayoutIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/viewPagerImages"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="16dp"
                        android:background="@android:color/transparent"
                        app:tabBackground="@drawable/tab_selector_modern"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp"
                        app:tabPaddingEnd="6dp"
                        app:tabPaddingStart="6dp"
                        app:tabRippleColor="@null"/>

                    <!-- Contador de imágenes -->
                    <TextView
                        android:id="@+id/imageCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@id/viewPagerImages"
                        android:layout_alignTop="@id/viewPagerImages"
                        android:layout_margin="16dp"
                        android:background="@drawable/counter_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        tools:text="1/4"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Contenido del producto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Descripción del producto -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/sen_font"
                    android:paddingHorizontal="18dp"/>

                <!-- Descripción del producto -->
                <TextView
                    android:id="@+id/tvDescripcionProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:padding="18dp"
                    android:text="La Classic Burger es una jugosa hamburguesa de res a la parrilla, servida en un pan brioche suave, con queso cheddar derretido, lechuga fresca, tomate, cebolla caramelizada y una salsa especial de la casa."
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"/>

                <!-- Contenedor del precio -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="18dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precio:"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:fontFamily="@font/sen_font"/>

                    <TextView
                        android:id="@+id/productDetailPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 32"
                        android:textColor="@android:color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:paddingStart="10dp"/>
                </LinearLayout>


                <!-- Botón para EDITAR -->
                <Button
                    android:id="@+id/btnEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EDITAR"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_light"
                    app:strokeWidth="1dp"
                    app:strokeColor="@android:color/holo_red_light"
                    android:backgroundTint="@android:color/white"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="10dp"
                    android:padding="16dp"
              />

                <!-- Botón para ELIMINAR -->
                <Button
                    android:id="@+id/btnEliminar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:padding="16dp"
                    android:text="ELIMINAR"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</LinearLayout>