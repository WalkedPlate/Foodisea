<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".activity.adminRes.AdminResDetallesPedidosActivity">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <Button
            android:id="@+id/btnBack"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/baseline_arrow_back_ios_new_24"
            android:contentDescription="@string/btnBack"
            android:backgroundTint="@color/bg_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ESTADO DE ENTREGA"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/sen_font"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Contenido desplazable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="18dp"
            android:paddingTop="8dp"
            android:paddingBottom="28dp">

            <TextView
                android:id="@+id/idPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#162432"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/btn_dark"
                android:fontFamily="@font/sen_font"
                android:layout_marginBottom="22dp"/>


            <!-- Información del cliente  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cliente:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/sen_font"
                android:layout_marginBottom="18dp"/>

            <!-- nombre -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_profile"
                    app:tint="@color/btn_dark"/>

                <TextView
                    android:id="@+id/idNombreCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="John Dylan Gomez Doe"
                    android:textSize="15dp"
                    android:fontFamily="@font/sen_font"
                    android:textColor="@color/text_primary"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- locacion -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/btn_dark"/>

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Av. La mar 25 urb santa catalina"
                    android:textSize="15dp"
                    android:fontFamily="@font/sen_font"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- numero -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="18dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_call"
                    app:tint="@color/btn_dark"/>

                <TextView
                    android:id="@+id/idTelefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="990857621"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Divisor entre ítems -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="18dp"
                android:background="@color/gray_light"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orden:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/sen_font"
                android:layout_marginVertical="8dp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProductos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"/>


            <!-- Divisor entre ítems -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="18dp"
                android:background="@color/gray_light"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuenta:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/sen_font"
                android:layout_marginVertical="14dp"/>

            <!-- Resumen de costos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

                <!-- Total consumo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total consumo:"
                        android:fontFamily="@font/sen_font"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/montoPedido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 96"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Delivery -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Delivery:"
                        android:textColor="@android:color/darker_gray"
                        android:fontFamily="@font/sen_font"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 15"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Total -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TOTAL:"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/sen_font"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/montoTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 100"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>