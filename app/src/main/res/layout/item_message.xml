<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/background">

    <!-- Imagen del receptor -->
    <ImageView
        android:id="@+id/receiverProfileImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Burbuja de mensaje del receptor -->
    <TextView
        android:id="@+id/receiverMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_receiver"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:text="Hola, ¿cómo estás?"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/receiverProfileImage"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Hora del receptor -->
    <TextView
        android:id="@+id/receiverTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:11 PM"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/receiverProfileImage"
        app:layout_constraintTop_toBottomOf="@id/receiverMessage" />

    <!-- Imagen del remitente -->
    <ImageView
        android:id="@+id/senderProfileImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Burbuja de mensaje del remitente -->
    <TextView
        android:id="@+id/senderMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_sender"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:text="¡Todo bien, gracias!"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/senderProfileImage"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Hora del remitente -->
    <TextView
        android:id="@+id/senderTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:12 PM"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/senderProfileImage"
        app:layout_constraintTop_toBottomOf="@id/senderMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>
