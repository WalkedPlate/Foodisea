<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.cliente.ClienteTrackingActivity"
    android:background="@color/white">

    <!-- Google Maps Fragment con padding superior para la barra de estado -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"/>

    <!-- Container para el botón de regreso con padding para la barra de estado -->
    <FrameLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:contentDescription="Regresar"
            android:tint="@color/black"/>
    </FrameLayout>

    <!-- Bottom Sheet con nuevo diseño -->
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_background"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="120dp"
        app:behavior_fitToContents="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- Drag Handle con nuevo diseño -->
        <View
            android:id="@+id/drag_handle"
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="@color/gray_300"
            android:alpha="0.5"/>

        <!-- Status Badge con elevación -->
        <TextView
            android:id="@+id/order_status_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/status_badge_background"
            android:elevation="2dp"
            android:fontFamily="@font/sen_font"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:textColor="@color/white"
            tools:text="En camino"/>

        <!-- Estimated Time -->
        <TextView
            android:id="@+id/estimated_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:alpha="0.87"
            tools:text="15-20 min"/>

        <!-- Restaurant Info con CardView -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray_300">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/restaurant_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvRestaurant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sen_font"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvOrderTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:alpha="0.7"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Progress Bar con mejor espaciado -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/delivery_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            app:trackCornerRadius="2dp"
            app:trackThickness="4dp"
            app:indicatorColor="@color/red"
            app:trackColor="@color/red_light"/>

        <!-- Status Steps con mejor espaciado -->
        <LinearLayout
            android:id="@+id/status_steps_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="16dp"
            android:weightSum="5">

            <TextView
                android:id="@+id/order_status_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Recibido"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/order_status_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Preparación"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/order_status_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Recogiendo"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/order_status_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="En camino"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/order_status_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Entregado"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Delivery Person Info con mejor diseño -->
        <LinearLayout
            android:id="@+id/delivery_person_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:background="@color/gray_300"/>

            <!-- Delivery Person Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="16dp"
                android:paddingHorizontal="24dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/delivery_person_photo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImageView" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/delivery_person_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sen_font"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Repartidor" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnChat"
                    style="?attr/materialIconButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:iconTint="@color/btn_medium"
                    app:strokeColor="@color/btn_medium"
                    app:icon="@drawable/ic_chat" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light" />
        </LinearLayout>

        <!-- Botón de Cancelar Pedido -->
        <Button
            android:id="@+id/btnCancelarPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="0dp"
            android:paddingVertical="14dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text="Cancelar pedido"
            android:textAllCaps="true"
            android:textColor="@color/error"
            app:strokeColor="@color/error"
            android:fontFamily="@font/sen_font"
            android:textStyle="bold"
            android:visibility="gone"/>

        <!-- Order Details Button -->
        <Button
            android:id="@+id/btn_order_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:paddingVertical="14dp"
            style="@style/Widget.Material3.Button"
            android:text="Detalles de compra"
            android:textAllCaps="true"
            android:backgroundTint="@color/btn_medium"
            android:fontFamily="@font/sen_font"
            android:textStyle="bold"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>