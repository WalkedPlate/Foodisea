<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context=".activity.cliente.ClienteRestauranteActivity">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <Button
            android:id="@+id/btnBack"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/btnBack"
            app:icon="@drawable/baseline_arrow_back_ios_new_24"
            android:backgroundTint="@color/bg_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


        <Button
            android:id="@+id/btnCart"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Boton de carrito"
            app:icon="@drawable/outline_shopping"
            android:backgroundTint="@color/bg_gray_light"
            app:iconTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvCartItemCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_bg"
            android:text="@string/cantProducts"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingHorizontal="4dp"
            android:minWidth="16dp"
            android:minHeight="16dp"
            app:layout_constraintEnd_toEndOf="@id/btnCart"
            app:layout_constraintTop_toTopOf="@id/btnCart"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintVertical_bias="0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <!-- Imagen android:alpha="0.95" -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivRestaurantImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="@string/imgRest"
                android:scaleType="centerCrop"
                android:src="@drawable/restaurant_image"
                app:shapeAppearanceOverlay="@style/RoundedCorners"/>

            <TextView
                android:id="@+id/tvRestaurantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nameRest"
                android:fontFamily="@font/sen_font"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginVertical="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción:"
                    android:fontFamily="@font/sen_font"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvDescripcionRest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/descripcionRest"
                    android:textAlignment="viewStart"
                    android:layout_marginBottom="18dp"/>

                <!-- Información de contacto  -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contacto:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sen_font"
                    android:layout_marginBottom="4dp"/>

                <!-- locacion -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location"
                        app:tint="@color/btn_dark"/>

                    <TextView
                        android:id="@+id/tvRestaurantAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2118 Thornridge Cir. Syracuse"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- numero -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="18dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_call"
                        app:tint="@color/btn_dark"/>

                    <TextView
                        android:id="@+id/tvRestaurantTelef"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="990857621"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carta:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sen_font"
                    android:layout_marginBottom="8dp"/>

                <!-- Categorías de productos -->
                <HorizontalScrollView
                    android:id="@+id/hsvCategories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:gravity="center_horizontal">

                        <Button
                            android:id="@+id/btnTodos"
                            style="?attr/materialIconButtonFilledTonalStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="20dp"
                            android:layout_marginHorizontal="4dp"
                            android:text="@string/todas"
                            android:fontFamily="@font/sen_font"
                            android:textStyle="bold"
                            android:backgroundTint="@color/btn_light"/>

                        <Button
                            android:id="@+id/btnPlatos"
                            style="?attr/materialIconButtonFilledTonalStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="20dp"
                            android:layout_marginHorizontal="4dp"
                            android:text="@string/catPlatos"
                            android:fontFamily="@font/sen_font"
                            android:backgroundTint="@color/btn_light"/>

                        <Button
                            android:id="@+id/btnBebidas"
                            style="?attr/materialIconButtonFilledTonalStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="20dp"
                            android:layout_marginHorizontal="4dp"
                            android:text="@string/catBebidas"
                            android:fontFamily="@font/sen_font"
                            android:backgroundTint="@color/btn_light"/>
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Contenedor para RecyclerView, ProgressBar y mensaje de no productos -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:padding="10dp"/>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvNoProducts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="No hay productos disponibles"
                        android:textSize="16sp"
                        android:fontFamily="@font/sen_font"
                        android:visibility="gone"/>

                </FrameLayout>
            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>