<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context=".activity.superadmin.SuperAdminAgregarRestauranteActivity">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <Button
            android:id="@+id/btnBack"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/baseline_arrow_back_ios_new_24"
            android:contentDescription="@string/btnBack"
            android:backgroundTint="@color/bg_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo restaurante"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/sen_font"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="28dp">

            <!-- IMAGEN REST -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingBottom="16dp">

                <!-- Contenedor e ícono de cámara -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="center">

                    <!-- Imagen de perfil circular -->
                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_corners"
                        android:backgroundTint="@color/btn_light"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectImages"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="Selecciona una imagen"
                        android:textColor="@color/gray_500"
                        android:textAlignment="center"
                        android:gravity="center"
                        app:icon="@drawable/ic_add_photo"
                        app:iconGravity="textTop"
                        app:iconSize="32dp"
                        app:iconTint="@color/gray_500"
                        app:iconPadding="8dp"
                        android:backgroundTint="@android:color/transparent"
                        android:background="@drawable/button_dashed_border"
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>

                </FrameLayout>

            </LinearLayout>

            <!-- NOMBRE REST -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etNombreLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del restaurante"
                android:layout_marginBottom="16dp"
                app:endIconMode="custom"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/border_light"
                app:hintTextColor="@color/border_light"
                app:cursorColor="@color/border_light">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNombreRes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="50" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- DESCRIPCION -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etDescriptionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripción"
                android:layout_marginBottom="16dp"
                app:endIconMode="custom"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/border_light"
                app:hintTextColor="@color/border_light"
                app:cursorColor="@color/border_light">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="300" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- RUC -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etRucLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="RUC"
                android:layout_marginBottom="16dp"
                app:endIconMode="custom"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/border_light"
                app:hintTextColor="@color/border_light"
                app:cursorColor="@color/border_light">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRuc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="11" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- TELÉFONO -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etTelefonoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Teléfono"
                android:layout_marginBottom="16dp"
                app:endIconMode="custom"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/border_light"
                app:hintTextColor="@color/border_light"
                app:cursorColor="@color/border_light">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:maxLength="9" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- DIRECCIÓN -->

            <!-- ADMINISTRADOR -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Administrador"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:boxStrokeColor="@color/border_light"
                app:hintTextColor="@color/border_light"
                app:cursorColor="@color/border_light">

                <AutoCompleteTextView
                    android:id="@+id/spinnerAdministrador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botón Crear -->
            <Button
                android:id="@+id/btnCrearRestaurante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:backgroundTint="@android:color/holo_red_light"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginVertical="8dp"
                android:textStyle="bold"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>