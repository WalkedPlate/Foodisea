<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0" />
            <corners android:radius="20dp" /> <!-- Aumentamos el radio para bordes más redondeados -->
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" /> <!-- Añadimos un borde sutil -->
            <padding
                android:left="12dp"
                android:right="12dp"
                android:top="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
    <item android:gravity="end|center_vertical"
        android:drawable="@drawable/ic_dropdown_arrow"
        android:right="12dp" /> <!-- Ajustamos la posición de la flecha -->
</layer-list>