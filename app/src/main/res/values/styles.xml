<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">0dp</item> <!-- Removemos el padding adicional -->
        <item name="android:paddingEnd">24dp</item>
        <item name="android:popupBackground">#FFFFFF</item>
        <item name="android:dropDownVerticalOffset">8dp</item> <!-- Ajusta la posiciÃ³n del dropdown -->
        <item name="android:background">@drawable/custom_spinner_background</item>
    </style>

    <style name="ShapeAppearanceOverlay.RoundedCorners16dp" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="RoundedBottomCornersShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>


    <style name="SearchViewStyle">
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:fontFamily">@font/sen_font</item>
    </style>

    <style name="RoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>